<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<body>

<div metal:fill-slot="main">
    <tal:main-macro metal:define-macro="main">

        <h1 tal:content="here/title_or_id" class="documentFirstHeading">
            Title or id
        </h1>

        <div class="documentDescription"
             tal:content="here/Description">
        description
        </div>

        <p>
            <a href=""
               tal:define="src_img string:$here_url/file_download_version?version_id=${request/version_id}"
               tal:attributes="href string:$src_img">
                <img src="" alt=""
                    tal:attributes="src string:$here_url/file_download_version?version_id=${request/version_id};
                                    src_old string:${here/getIcon};
                                    alt string:xxx"  />
            </a>
        </p>

        <div>
            <small tal:define="size python:here.getObjSize(here)">

                <span i18n:translate="label_size">Size</span>:

                <span
                      tal:content="size">
                    File size
                </span>

                <span tal:condition="python:test(size, 0, 1)"
                      i18n:translate="no_image_uploaded">
                    (No image has been uploaded yet)
                </span>

            </small>
        </div>

        <metal:metadata use-macro="here/version_metadata_view/macros/metadata">
            Metadata
        </metal:metadata>

    </tal:main-macro>
</div>

</body>

</html>