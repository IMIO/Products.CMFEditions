<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<body>

<div metal:fill-slot="main">
    <tal:main-macro metal:define-macro="main"
               tal:define="size python:here.getObjSize(here);
                           content_type here/get_content_type;">

        <h1 tal:content="here/title_or_id" class="documentFirstHeading">
            Title or id
        </h1>

        <div class="documentDescription"
             tal:content="here/Description"
	     tal:on-error="string:nothing">
            description
        </div>

        <p>
            <a href=""
               notal:attributes="href string:$here_url"
               tal:attributes="href string:$here_url/file_download_version?version_id=${version_id}">
<!--                <img src="" tal:attributes="src string:${here/getIcon}; alt string:${here/getFileType} file" alt="" /> -->
                <tal:block i18n:translate="label_click_to_get_file">
                Click here to get the file
                </tal:block>
            </a>
        </p>

        <small class="discreet">
            <span i18n:translate="label_size">
            Size
            </span>

            <span tal:condition="size"
                tal:content="size">
            257 KB
            </span>

            <span tal:condition="python:test(size,0,1)" i18n:translate="no_file_uploaded">
              (No file has been uploaded yet)
            </span>

            -

            <span i18n:translate="label_file_type">
            File type
            </span>

            <span tal:content="here/getFileType|here/content_type">
            Content type
            </span>
        </small>

        <div class="row"
             tal:condition="python:test(content_type.find('text')>-1, 1,0)">

                <h2 i18n:translate="heading_file_contents">File contents</h2>

                <pre tal:content="here/get_data|here/data|nothing">
                </pre>
        </div>

        <metal:metadata use-macro="here/version_atmetadata_view/macros/metadata">
            Metadata
        </metal:metadata>
    </tal:main-macro>
</div>

</body>

</html>